&spi0 {
    status = "okay";

    trackball_central: trackball@1 {
        status = "okay";
        compatible = "pixart,paw3222";
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&xiao_d 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };
};

&peripheral_listener {
    status = "okay";
};

&central_listener {
    status = "okay";
    device = <&trackball_central>;

    /* ポインタはここでは一切いじらない（OK状態を維持） */

    scroller {
        /* レイヤー2でのみスクロール */
        layers = <2>;

        input-processors =
            /* XY → スクロール */
            <&zip_xy_to_scroll_mapper>,

            /* 小さい入力・斜め入力を抑制（誤爆防止） */
            <&zip_xy_deadzone 25 25>,

            /* 感度調整＋上下反転
             * X:  1 / 3  → 横スクロール減速
             * Y: -1 / 3  → 縦スクロール減速＋反転
             */
            <&zip_scroll_scaler 1 (-1)>,
            <&zip_scroll_divider 3 3>;
    };
};
